---
import PostCardV2 from '@/components/PostCardV2'
import type { GetPostListResponse } from '@/types/responses'

type Props = {
	posts: GetPostListResponse[]
}

const { posts } = Astro.props
---

<section
	class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mt-3 md:[&>*:first-child]:col-span-2'
>
	{
		posts.map((post) => {
			return <PostCardV2 postData={post} />
		})
	}
</section>
